<section id="statistics">
  <%= tag.h2 "Statistics:" %>
  <%= tag.p "Average Comedian Age: #{@comedians.average_age.round(2)}" %>
  <%= tag.p "Cities of Origin: #{@comedians.cities.join(", ")}" %>
</section>

<% @comedians.each do |comedian| %>
<section class="<%= comedian.name.downcase.gsub(" ", "-") %>">
  <%= tag.h3 "Name: #{comedian.name}" %>
  <%= image_tag comedian.image_url, alt: "Image of the comedian #{comedian.name}", class: "comedian-thumbnail" %>
  <%= tag.p "Age: #{comedian.age}" %>
  <%= tag.p "City: #{comedian.city}" %>
  <%= tag.h4 "#{comedian.name}'s TV Specials (#{comedian.tv_specials.size} total):" %>
  <% comedian.tv_specials.each do |special| %>
  <%= tag.p "#{special.name} (#{special.run_time} mins)" %>
  <% end %>
</section>
<% end %>
